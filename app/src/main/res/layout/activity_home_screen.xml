        <!--android:id="@+id/addRowIButton"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_alignEnd="@+id/instrumentPane"-->
        <!--android:layout_alignParentStart="true" />-->
</RelativeLayout>
